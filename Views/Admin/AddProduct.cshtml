@model Product

@{
    ViewData["Title"] = "Adnin Add Product";
}

<partial name="_AdminHeader"></partial>




<h3 class="text-center my-2">New Product</h3>
<hr>

<form asp-controller="Admin" asp-action="CreateProd">

<div class="form-group row">
  <label asp-for="Name" class="col-sm-2 col-form-label"></label>
  <div class="col-sm-10">
    <span class="text-danger font-weight-bold" asp-validation-for="Name"></span>
    <input class="form-control bg-secondary text-white" asp-for="Name">
  </div>
</div>

  
<div class="form-group row">
  <label asp-for="Description" class="col-sm-2 col-form-label"></label>
  <div class="col-sm-10">
    <span class="text-danger font-weight-bold" asp-validation-for="Description"></span>
    <input class="form-control bg-secondary text-white" asp-for="Description">
  </div>
</div>
          
  <div class="form-group row">
    <label asp-for="Price" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <span class="text-danger font-weight-bold" asp-validation-for="Price"></span>
      <input type="number" step="0.01" class="form-control bg-secondary text-white" asp-for="Price">

    </div>
  </div>

<div class="form-group row">
  <label asp-for="Photo" class="col-sm-2 col-form-label">Photo URL</label>
  <div class="col-sm-10">
    <span class="text-danger font-weight-bold" asp-validation-for="Photo"></span>
    <input class="form-control bg-secondary text-white" asp-for="Photo">
  </div>
</div>
  
  <button class="btn btn-success" type="submit">Create</button>



</form>